datasource db {
  provider = "postgresql"  // Αν χρησιμοποιείς άλλη βάση, κάνε την αντίστοιχη αλλαγή (π.χ. MySQL)
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?  // Αν το "name" είναι προαιρετικό
  createdAt DateTime @default(now())
}
