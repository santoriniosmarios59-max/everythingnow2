datasource db {
  provider = "postgresql"  // Αν χρησιμοποιείς άλλη βάση δεδομένων, π.χ. MySQL, κάνε την αντίστοιχη αλλαγή.
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
}
