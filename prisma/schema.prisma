generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"  // Αν χρησιμοποιείς PostgreSQL, άλλαξε το provider αν είναι άλλο DBMS.
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
}
